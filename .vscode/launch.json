	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug",
			"program": "${workspaceFolder}/build/App/Debug/App",
			"args": [
				"--wd",
				"${workspaceFolder}/App",
				"--disable_validation"
			],
			"cwd": "${workspaceFolder}",
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug Clang",
			"program": "${workspaceFolder}/build-clang/App/RelWithDebInfo/App.exe",
			"args": [
				"--wd",
				"${workspaceFolder}/App"
			],
			"cwd": "${workspaceFolder}",
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug Benchmark",
			"program": "${workspaceFolder}/build/Benchmarks/RelWithDebInfo/DisarrayBenchmarks.exe",
			"cwd": "${workspaceFolder}/App",
		}
	]
}
